<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>

    <title>Dollar Tracker</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanceTracker.Web.styles.css" asp-append-version="true" />

  </head>

  <body class="d-flex flex-column h-100 font">

    <!-- NAV -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">

        <img src="~/img/icons8-currency-exchange-48.png" alt="logo" class="me-3" />

        <a class="navbar-brand" href="#">Dollar Tracker</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- NAV MENU -->
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mb-2 mb-md-0 d-flex w-100">

                <!-- NAV LIST ITEM -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Transaction" asp-action="Index">Dashboard</a>
                </li>

                <!-- NAV DROP DOWN LIST -->
                <li class="nav-item dropdown">

                    <a class="nav-link dropdown-toggle" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">Management</a>
              
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                        <li>
                            <a class="dropdown-item" asp-controller="Provider" asp-action="Index">Providers</a>
                        </li>

                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Index">Accounts</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item ms-auto">
                    <div>
                        <partial name="_LoginPartial.cshtml" />
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
    

    <!-- MAIN BODY -->
    <main class="flex-shrink-0">
      <div class="container-sm">
        <div class="row topSpace-xl">

          @RenderBody()

        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-auto py-3 bg-dark">
      <div class="container-fluid text-center">
        <span class="text-muted">For Purposes of Adam Nihiser's Portfolio</span>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

  </body>
</html>
